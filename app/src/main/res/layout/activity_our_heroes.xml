<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OurHeroes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <ImageView
                android:layout_width="413dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="fill"
                android:padding="2dp"
                android:src="@drawable/doctors" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India's Frontline Heroes of Coronavirus War"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#212121"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="30dp"/>




            <ImageView
                android:layout_width="413dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="fill"
                android:padding="2dp"
                android:src="@drawable/police2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We owe a huge thanks to the heroes on the front line of the coronavirus pandemic"
                android:gravity="center"
                android:textColor="#212121"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"/>




            <ImageView
                android:layout_width="413dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:foregroundGravity="fill"
                android:padding="2dp"
                android:src="@drawable/police5" />



            <ImageView
                android:layout_width="413dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:foregroundGravity="fill"
                android:padding="2dp"
                android:src="@drawable/doctors5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank You"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FF1744"
                android:fontFamily="@font/quicksand"
                android:textSize="90dp"/>


        <!--    <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Chopda Maker Lab"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#2196F3"
                android:fontFamily="@font/quicksand"
                android:textStyle="normal"
                android:layout_marginBottom="30dp"
                android:textSize="20dp" />  -->


    </LinearLayout>


</ScrollView>